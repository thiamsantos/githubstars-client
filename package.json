{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "React boilerplate",
  "main": "index.js",
  "scripts": {
    "prelint": "prettier --single-quote --no-semi --no-bracket-spacing --trailing-comma none --write \"src/**/*.js\" --write webpack.config.js",
    "lint": "xo --fix",
    "pretest": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "clean": "rimraf public",
    "build": "cross-env NODE_ENV=development webpack --hide-modules --colors --progress",
    "build:watch": "cross-env NODE_ENV=development webpack -w --hide-modules --colors --progress",
    "build:prod": "npm run clean && cross-env NODE_ENV=production webpack -p",
    "serve": "node browsersync.js",
    "start": "run-p -r serve build:watch",
    "precommit": "lint-staged && npm test && npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiamsantos/react-boilerplate.git"
  },
  "keywords": [
    "react",
    "boilerplate"
  ],
  "author": "Thiago Santos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiamsantos/react-boilerplate/issues"
  },
  "homepage": "https://github.com/thiamsantos/react-boilerplate#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-lodash": "^3.3.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.24.1",
    "browser-sync": "^2.23.5",
    "clean-webpack-plugin": "^0.1.17",
    "connect-history-api-fallback": "^1.5.0",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.9",
    "cssnano": "^3.10.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.16.0",
    "eslint-config-xo-react": "^0.15.0",
    "eslint-plugin-react": "^7.5.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.1.4",
    "lint-staged": "^6.0.1",
    "lodash-webpack-plugin": "^0.11.5",
    "node-notifier": "^5.2.1",
    "node-sass": "^4.8.3",
    "npm-run-all": "^4.1.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-loader": "^2.0.10",
    "react-code-splitting": "^1.2.1",
    "react-router-dom": "^4.2.2",
    "react-test-renderer": "^16.2.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.19.1",
    "svg-url-loader": "^2.3.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-chunk-hash": "^0.5.0",
    "xo": "^0.18.2"
  },
  "dependencies": {
    "array-uniq": "^1.0.3",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "bulma": "^0.7.1",
    "classnames": "^2.2.5",
    "dotenv-webpack": "^1.5.5",
    "formik": "^0.11.11",
    "mitt": "^1.1.3",
    "prop-types": "^15.6.0",
    "query-string": "^6.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-helmet": "^5.2.0",
    "react-router": "^4.2.0",
    "recompose": "^0.27.0"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "bracketSpacing": false,
    "trailingComma": "none"
  },
  "xo": {
    "parser": "babel-eslint",
    "space": true,
    "semicolon": false,
    "envs": [
      "browser",
      "jest"
    ],
    "extends": "xo-react",
    "rules": {
      "import/no-unassigned-import": 0,
      "react/jsx-tag-spacing": 0,
      "react/jsx-indent": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/forbid-component-props": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
